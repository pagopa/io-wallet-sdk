{
  "name": "io-wallet-sdk",
  "private": true,
  "version": "0.3.0",
  "description": "Typescript SDK designed to streamline interactions with the Italian digital wallet ecosystem",
  "repository": {
    "url": "https://github.com/pagopa/io-wallet-sdk",
    "type": "git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "types:check": "pnpm build && tsc --noEmit",
    "build": "pnpm -r build",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "format": "prettier --write \"packages/**/src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"packages/**/src/**/*.{js,ts}\"",
    "lint": "eslint --fix \"packages/**/src/**/*.{js,ts}\"",
    "lint:check": "eslint \"packages/**/src/**/*.{js,ts}\"",
    "pre-commit": "pnpm format && pnpm lint",
    "pre-push": "pnpm pre-commit && pnpm types:check && pnpm test",
    "code-review": "pnpm types:check && pnpm lint:check && pnpm format:check && pnpm test",
    "prepare": "husky",
    "release": "pnpm build && pnpm changeset publish --no-git-tag"
  },
  "keywords": [],
  "author": "PagoPA spa",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@pagopa/eslint-config": "^4.0.1",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
